<div class="navbar-listy">
  <div class="navbar-left">
    <%= link_to activities_path, class: "navbar-listy-brand" do %>
    <i class="fas fa-th-list logo"></i>
    <% end %>
    <div class="vl"></div>
    <h1 class="logo-listy">Listy</h1>
  </div>

  <div class="navbar-search">
    <%= form_tag(profiles_path, method: :get, class: "form-inline", role: 'search') do %>
    <div class="input-group-search">
      <%= text_field_tag :term,
        params[:term],
        id: 'users_search',
        autocomplete: :off,
        placeholder: 'Search',
        class: 'form-control' %>
    </div>
    <% end %>
  </div>
  <!-- Right Navigation -->
  <div class="navbar-listy-right hidden-xs hidden-sm">
    <% if current_user.is_a?(User) %>
      <!-- Avatar with dropdown menu -->
      <%= link_to "Home", activities_path, class: "btn-navigation" %>
      <%= link_to "Create a List", new_list_path, class: "btn-navigation btn-right" %>
      <div class="navbar-listy-item">
        <div class="dropdown">
          <%= cl_image_tag current_user.photo, width: 150, height: 150, crop: :thumb, gravity: :face, secure: true, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-listy-dropdown-menu">
            <li>
              <%= link_to profile_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Sign Up"), new_user_registration_path, class: "btn btn-info" %>
      <%= link_to t(".sign_in", default: "Log In"), new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

