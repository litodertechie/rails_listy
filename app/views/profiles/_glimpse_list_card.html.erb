<div class="col-sm-5">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= list.name %></h5>
      <div class="item-preview">
        <% if list.items.first.url != nil %>
            <%= render "glimpse_url_item", item: list.items.first %>
          <%else%>
            <%= render 'glimpse_normal_item', item: list.items.first
            %>
          <% end %>
      </div>
        <div class="controls">
          <div class="controls-left">
            <%=link_to "Explore", list_path(list),  class: 'btn btn-primary' %>
          </div>
          <div class="controls-right">
             <%= liked_list(list) %>
            <span class="likes-count"><%= list.get_upvotes.size %></span>
            </ul>
          </div>
        </div>
    </div>
  </div>
</div>




