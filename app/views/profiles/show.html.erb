<div class="profile-header-wrapper">
      <div class="container profile-header-container text-center">
        <div class="profile-header-infos">
          <%= cl_image_tag @user.photo, width: 150, height: 150, crop: :thumb, gravity: :face, secure: true, class: "avatar"%>
          <h1><%= @user.username %></h1>
          <h2><%= @user.description%></h2>
          <%= render 'follow_form' %>
        </div>
        <div class="tabs">
          <a class="tab active" href="#">
            <% total = 0 %>
            <% @user.lists.each do |list| %>
              <% total += list.get_upvotes.size %>
            <%end %>
            <h3><%=total%></h3>
            <p>Likes</p>
          </a>
          <a class="tab" href="#">
            <h3><%= @user.lists.count %></h3>
            <p>Lists</p>
          </a>
          <%= link_to "", :class => "tab", "data-toggle" => "modal", "data-target" => "#exampleModalLong" do%>
            <h3><%= current_user.followers_count %></h3>
            <p>Followers</p>
            <% end %>
          <a class="tab" href="#">
            <h3><%= @user.follow_count %></h3>
            <p>Following</p>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <% @user.lists.each do |list| %>
  <%= render 'glimpse_list_card', list: list %>
  <%end %>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Followers</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <ul class="user-lists">
            <% @followers.each do |follower| %>
                  <%= link_to profile_path(follower) do %>
                    <li class="user">
                      <div class="user-upper-part">
                        <%= cl_image_tag follower.photo, width: 150, height: 150, crop: :thumb, gravity: :face, secure: true, class: "avatar-large"%>
                        <div class="user-name">
                          <h3><%= "@" + follower.username %><h3>
                          <p><%= [follower.first_name, follower.last_name].join(" ")%></p>
                          <% @user = follower  %>
                        </div>
                      </div>
                        <%= render '/profiles/follow_form' %>
                      <div class="user-footer">
                        <div class="user-stat">
                          <p><%= follower.lists.count %></p>
                          <p class="user-text">Lists</p>
                        </div>
                        <div class="user-stat">
                          <p><%= follower.followers_count %></p>
                          <p class="user-text">Followers</p>
                        </div>
                        <div class="user-stat">
                          <p><%= follower.follow_count %></p>
                          <p class="user-text">Following</p>
                        </div>
                      </div>
                    </li>
                <% end %>
              <% end %>
          </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>





