<div class="row">
  <aside class="col-md-3 col-4 left-column">
    <section>
    <div class="small-profile-header-wrapper">
      <div class="container small-profile-header-container user-text-center">
        <div class="small-profile-header-infos">
          <%= cl_image_tag current_user.photo, width: 150, height: 150, crop: :thumb, gravity: :face, secure: true, class: "avatar-bordered"%>
          <h1><%= current_user.username %></h1>
          <h2><%= current_user.description%></h2>
        </div>
        <div class="small-tabs">
          <a class="tab small active" href="#">
            <% total = 0 %>
            <% @current_user.lists.each do |list| %>
              <% total += list.get_upvotes.size %>
            <%end %>
            <h3><%=total%></h3>
            <p>Likes</p>
          </a>
          <a class="tab small" href="#">
            <h3><%= current_user.lists.count %></h3>
            <p>Lists</p>
          </a>
          <a class="tab small" href="#">
            <h3><%= current_user.followers_count %></h3>
            <p>Followers</p>
          </a>
          <a class="tab small" href="#">
            <h3><%= current_user.follow_count %></h3>
            <p>Following</p>
          </a>
        </div>
      </div>
      <div class="profile-views">
        <h2><%= current_user.impressionist_count %></h2>
        <h3>Profile Views</h3>
      </div>
    </div>
    </section>
  </aside>
  <div class="col-md-6 col-12 feed">
    <div class="call-to-action">
      <h3>What are you waiting for? Create a list and inspire other's</h3>
      <%= link_to "Create a List", new_list_path, class: "btn-call-to-action" %>
    </div>
    <% @activities.each do |activity| %>
    <div class="activity">
      <div class="activity-avatar">
        <%= cl_image_tag activity.owner.photo, width: 150, height: 150, crop: :thumb, gravity: :face, secure: true, class: "avatar"%>
      </div>
      <%= link_to activity.owner.username, activity.owner if activity.owner %>
      <%= render_activity activity %>
      <span class="timestamp">
      <%= time_ago_in_words(activity.created_at) %> ago.
      </span>
    </div>
    <% end %>
  </div>
  <aside class="col-md-3 who-to-follow">
    <section>
      <div class="who-to-follow-box">
        <div class="header">
          <div class="header-left">
            <h1> Who to Follow</h1>
          </div>
          <div class="header-right">
          <%= link_to follow_suggestions_user_path(current_user) do %>
            <p>View All</p>
          <% end %>
          </div>
        </div>
          <ul class="user-lists">
            <% @users.each do |user| %>
                  <%= link_to profile_path(user) do %>
                    <li class="user">
                      <div class="user-upper-part">
                        <%= cl_image_tag user.photo, width: 150, height: 150, crop: :thumb, gravity: :face, secure: true, class: "avatar-large"%>
                        <div class="user-name">
                          <h3><%= "@" + user.username %><h3>
                          <p><%= [user.first_name, user.last_name].join(" ")%></p>
                          <% @user = user  %>
                        </div>
                      </div>
                        <%= render '/profiles/follow_form' %>
                      <div class="user-footer">
                        <div class="user-stat">
                          <p><%= user.lists.count %></p>
                          <p class="user-text">Lists</p>
                        </div>
                        <div class="user-stat">
                          <p><%= user.followers_count %></p>
                          <p class="user-text">Followers</p>
                        </div>
                        <div class="user-stat">
                          <p><%= user.follow_count %></p>
                          <p class="user-text">Following</p>
                        </div>
                      </div>
                    </li>
                <% end %>
              <% end %>
          </ul>
        </div>
    </section>
  </aside>
</div>

